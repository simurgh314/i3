set $mod Mod4
set $refresh_i3status killall -SIGUSR1
font pango:monospace 9
#for_window [tiling] border pixel 5
#default_border pixel 5

default_border pixel 4
default_floating_border pixel 5



exec --no-startup-id ~/.config/polybar/launch.sh
#exec --no-startup-id picom -b --backend glx --vsync --xrender-sync-fence --glx-no-rebind-pixmap --use-damage --glx-no-stencil
exec --no-startup-id  picom -b --use-ewmh-active-win --config /home/$USER/.config/picom/picom.conf




# ОКНА #	
#==================================================
for_window [class="^.*"] border pixel 1
for_window [class="i3bar"] gaps outer current set 0

#smart_gaps on 
#gaps inner 8
#gaps outer 0




