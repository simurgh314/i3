client.urgent           #000000    #000000	#000000      #000000      #000000
client.background       #1d1f2110




# АВТОЗАПУСК
#===============================================================
exec --no-startup-id urxvtd --quiet --opendisplay --fork
exec --no-startup-id thunar --daemon
exec --no-startup-id setxkbmap "us,ru" ",winkeys" "grp:toggle"
exec --no-startup-id flameshot
exec --no-startup-id crow &
exec --no-startup-id --systray pavucontrol &
exec --no-startup-id numlockx 
